---
import { Image } from "astro:assets";
import { getPath } from "@lib/util";
import PostMeta from "./PostMeta.astro";
import PostTags from "./PostTags.astro";

const { post } = Astro.props;

const coverImage = post.data.cover_image
  ? import(`/src/content/posts/${post.data.cover_image}`)
  : "";
---

<div
  class="post-card content-box"
  class:list={{ "post-card--has-poster": post.data.poster }}
>
  <div class="post-card__header">
    {
      coverImage && (
        <Image alt="Cover image" class="post-card__image" src={coverImage} />
      )
    }
  </div>
  <div class="post-card__content">
    <h2 class="post-card__title">{post.data.title}</h2>
    <p class="post-card__description">{post.data.description}</p>

    <PostMeta class="post-card__meta" post={post} />

    <a
      class="post-card__link"
      href={getPath(post.slug)}
      >Read {post.data.title}</a
    >

    <PostTags class="post-card__tags" post={post} />
  </div>
</div>

<style>
  .post-card {
    margin-bottom: var(--space);
    position: relative;

    &__header {
      margin-left: calc(var(--space) * -1);
      margin-right: calc(var(--space) * -1);
      margin-bottom: calc(var(--space) / 2);
      margin-top: calc(var(--space) * -1);
      overflow: hidden;
      border-radius: var(--radius) var(--radius) 0 0;

      &:empty {
        display: none;
      }
    }

    &__image {
      min-width: 100%;
      height: 100%;
    }

    &__title {
      margin-top: 0;
    }

    &:hover {
      transform: translateY(-5px);
      box-shadow: 1px 10px 30px 0 rgba(0, 0, 0, 0.1);
    }

    &__link {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      overflow: hidden;
      text-indent: -9999px;
      z-index: 0;

      &.focus-visible {
        opacity: 0.8;
      }
    }
  }
</style>
